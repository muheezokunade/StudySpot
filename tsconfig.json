{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@/*": ["client/src/*"]
    }
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "client/src/**/*.ts",
    "client/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
